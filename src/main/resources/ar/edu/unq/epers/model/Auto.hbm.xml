<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="ar.edu.unq.epers.model.Auto" table="autos" >
        
        <id name="patente" type="java.lang.String" length="6">
            <column name="A_PATENTE" />
            <generator class="identity" />
        </id>

        <property name="marca" type="string">
            <column name="A_MARCA" length="20" not-null="true" unique="false" />
        </property>
        <property name="nombre" type="string">
            <column name="A_NOMBRE" length="20" not-null="true" unique="false" />
        </property>
        <property name="año" type="int">
            <column name="A_AÑO" not-null="false" unique="false"/>
        </property>
        <property name="costo" type="double">
            <column name="A_COSTO" not-null="false" unique="false"/>
        </property>
        
        <one-to-one name="ubicacion" cascade="all" /> 
		<one-to-one name="categoria" cascade="all" />     
        
        <bag name="reservas" table="reservas" order-by="numeroSolicitud">
			<key>
				<column name="r_auto" sql-type="varchar(6)"></column>
			</key>
			<many-to-many column=""
				class="ar.edu.unq.epers.model.Reserva" />
		</bag>  
        
    </class>
</hibernate-mapping>