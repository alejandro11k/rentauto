<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="ar.edu.unq.epers.model.Auto" table="autos">

		<id name="patente" length="6">
			<generator class="assigned" />
		</id>

		<property name="marca" type="string" />
		<property name="modelo" type="string" length="20" />
		<property name="aÃ±o" />
		<property name="costoBase" />
		<many-to-one name="categoria" cascade="save-update" />
		<many-to-one name="ubicacionInicial" not-null="true" cascade="save-update"/>

		<list name="reservas" cascade="save-update" inverse="false">
			<key column="auto_id" />
			<list-index column="orden"></list-index>
			<one-to-many class="ar.edu.unq.epers.model.Reserva"/>
		</list>

	</class>
</hibernate-mapping>