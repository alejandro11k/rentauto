<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="ar.edu.unq.epers.model.Categoria" table="categorias" >
        
        <id name="nombre" type="java.lang.String" length="10">
            <column name="C_NOMBRE" />
            <generator class="assigned" />
        </id>
        <discriminator column="TIPO" type="string"/>
        
      <subclass name="ar.edu.unq.epers.model.Turismo" extends="Categoria" discriminator-value="T" />
      <subclass name="ar.edu.unq.epers.model.Familiar" extends="Categoria" discriminator-value="F" />
      <subclass name="ar.edu.unq.epers.model.Deportivo" extends="Categoria" discriminator-value="D" />
      <subclass name="ar.edu.unq.epers.model.TodoTerreno" extends="Categoria" discriminator-value="R" />
        
    </class>
</hibernate-mapping>